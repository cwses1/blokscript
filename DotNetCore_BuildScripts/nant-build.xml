<project name="DotNetCore_BuildScripts">
	<property name="DotNetFramework_ProjectsDir" value="../DotNetFramework_Projects" />
	<property name="DotNetCore_ProjectsDir" value="../DotNetCore_Projects" />

	<target name="clean">
		<delete>
			<fileset basedir="${DotNetCore_ProjectsDir}">
				<include name="**/*.cs" />
				<include name="**/bin/**" />
				<include name="**/obj/**" />
			</fileset>
		</delete>
	</target>

	<target name="load">
		<foreach item="Line" in="DotNetFramework_Projects.txt" property="ProjectDir">
			<copy todir="${DotNetCore_ProjectsDir}/${ProjectDir}">
				<fileset basedir="${DotNetFramework_ProjectsDir}/${ProjectDir}">
					<include name="*.cs" />
				</fileset>
			</copy>
		</foreach>
	</target>
	
	<target name="build">
		<exec program="dotnet" workingdir="${DotNetCore_ProjectsDir}/BlokScript.BlokScriptApp">
			<arg value="build" />
		</exec>
	</target>

</project>
